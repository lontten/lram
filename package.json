{
  "name": "lram",
  "version": "0.1.2-alpha.88",
  "description": "轻量级 Markdown 解析渲染工具，支持代码高亮（基于 highlight.js）和数学公式渲染（基于 katex）",
  "type": "module",
  "main": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "types": "./dist/esm/index.d.ts"
    },
    "./style": {
      "import": "./dist/lram.css"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lontten/lram.git"
  },
  "homepage": "https://github.com/lontten/lram#readme",
  "bugs": {
    "url": "https://github.com/lontten/lram/issues"
  },
  "scripts": {
    "test": "mocha -t 60000 --exit --recursive -r ts-node/register test/**/*.spec.ts",
    "test:watch": "mocha -w -t 60000 --exit -r ts-node/register test/**/*.spec.ts",
    "build:ts": "tsc",
    "build:scss": "sass lram.scss:dist/lram.css --style compressed",
    "dev:ts": "tsc --watch",
    "dev:scss": "sass --watch lram.scss:dist/lram.css",
    "prebuild": "rimraf dist",
    "build": "run-s build:ts build:scss",
    "release": "run-s build && npm publish"
  },
  "keywords": [
    "lontten",
    "lram",
    "markdown",
    "markdown-parser",
    "markdown-renderer",
    "highlight",
    "katex",
    "math-rendering"
  ],
  "author": "lontten",
  "license": "MIT",
  "dependencies": {
    "highlight.js": "^11.11.1",
    "katex": "^0.16.25"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/katex": "^0.16.7",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.9.1",
    "chai": "^6.2.0",
    "mocha": "^11.7.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "sass": "^1.93.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
