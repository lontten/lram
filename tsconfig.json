{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/esm",
    "module": "ES2022",
    "target": "es2022",
    "lib": [
      "es2022",
      "dom"
    ],
    // 模块解析
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    // 源码映射
    "sourceMap": true,
    "inlineSources": true,
    // 类型声明
    "declaration": true,
    "declarationMap": true,
    // 严格检查
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    // 类型
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "example",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}
